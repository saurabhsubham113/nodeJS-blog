<div class="form-group">
    <label for="title">Title</label>
    <input type="text" required name="title" id="title" value="<%= article.title %>" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description%></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" required id="markdown" class="form-control"><%= article.markdown%></textarea>
</div>
