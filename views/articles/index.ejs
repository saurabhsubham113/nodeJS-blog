<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="mt-2 mb-4">Blog Articles</h1>
                <a href="/article/new" class="btn btn-success">New Article</a>

                <% articles.forEach(article => { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= article.title %></h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%= article.createdAt.toLocaleDateString() %>
                        </div>
                        <div class="card-text mb-2">
                            <%= article.description%>
                        </div>
                        <a href="article/<%= article.slug%>" class="btn btn-primary">Read More</a>
                        <a href="article/edit/<%= article.id%>" class="btn btn-info">Edit</a>
                        <form action="/article/<%= article.id%>?_method=DELETE" method="post" class="d-inline">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
                <%    }) %>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>

</html>